<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoBlaze Automation Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="org.example.listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="staging"/>

    <test name="SignUp Tests">
        <classes>
            <class name="org.example.tests.SignUpTest"/>
        </classes>
    </test>

    <test name="Login Tests">
        <classes>
            <class name="org.example.tests.LoginTest"/>
        </classes>
    </test>

    <test name="Cart Tests">
        <classes>
            <class name="org.example.tests.CartTest"/>
            <class name="org.example.tests.CompleteOrderTest"/>
        </classes>
    </test>

    <test name="Full Regression">
        <packages>
            <package name="org.example.tests.*"/>
        </packages>
    </test>
</suite>